<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/poppinssemibold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/nama_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/ikhwan"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/poppinssemibold"
                    />
                <ImageView
                    android:id="@+id/btn_notif"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_notif"
                    android:layout_marginStart="100dp"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latest_offers"
                android:layout_marginStart="35sp"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/mask_group"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:text="@string/what_do_you_want_to_get_done_today"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <ImageButton
                    android:id="@+id/goPayment"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:contentDescription="TODO"
                    />
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:contentDescription="TODO"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:contentDescription="TODO" />
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:contentDescription="TODO"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/kupon_diskon"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"
                />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>